@using OgrenciNotMvc.Models.EntityFramework
@model List<TBLDERSLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<table class="table table-bordered ">
    <thead>
        <Tr>
            <th>Ders ID </th>
            <th>Ders ADI</th>
            <th>İŞLEMLER</th>
        </Tr>
    </thead>
    <tbody>
        @foreach (var drs in Model)
        {
            <tr>
                <td>@drs.DERSID</td>
                <td>@drs.DERSAD</td>
                <td><a href="/Dersler/Sil/@drs.DERSID" class="btn btn-danger">Sil</a>
                <a href="/Dersler/DersGetir/@drs.DERSID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Dersler/YeniDers" class="btn btn-primary">Yeni Ders Kaydı</a>